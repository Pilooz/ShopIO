<style>
.barcode2D,  #miscCanvas {
	display: none;
}

#barcodeTarget,  #canvasTarget {
	margin-top: 20px;
}
</style>

<script src="<%= APP_PATH %>/app/vendor/jquery-barcode/jquery-barcode.min.js?v=<%=APP_VERSION%>"></script>
<script type="text/javascript">

  function generateBarcode(){
    var value = $("#barcodeValue").val();
    var btype = $("input[name=btype]:checked").val();
    var renderer = 'css'; // $("input[name=renderer]:checked").val();
    
	var quietZone = false;
    if ($("#quietzone").is(':checked') || $("#quietzone").attr('checked')){
      quietZone = true;
    }
	
    var settings = {
      output: renderer,
      bgColor: $("#bgColor").val(),
      color: $("#color").val(),
      barWidth: $("#barWidth").val(),
      barHeight: $("#barHeight").val(),
      moduleSize: $("#moduleSize").val(),
      posX: $("#posX").val(),
      posY: $("#posY").val(),
      addQuietZone: $("#quietZoneSize").val()
    };
    if ($("#rectangular").is(':checked') || $("#rectangular").attr('checked')){
      value = {code:value, rect: true};
    }
	$("#canvasTarget").hide();
	$("#barcodeTarget").html("").show().barcode(value, btype, settings);
  }
      
  function showConfig1D(){
    $('.barcode1D').show();
    $('.barcode2D').hide();
  }
  
  function showConfig2D(){
    $('.barcode1D').hide();
    $('.barcode2D').show();
  }
  
  function clearCanvas(){
    var canvas = $('#canvasTarget').get(0);
    var ctx = canvas.getContext('2d');
    ctx.lineWidth = 1;
    ctx.lineCap = 'butt';
    ctx.fillStyle = '#FFFFFF';
    ctx.strokeStyle  = '#000000';
    ctx.clearRect (0, 0, canvas.width, canvas.height);
    ctx.strokeRect (0, 0, canvas.width, canvas.height);
  }
  
  $(function(){
    $('input[name=btype]').click(function(){
      if ($(this).attr('id') == 'datamatrix') showConfig2D(); else showConfig1D();
    });
  });

</script>

<div clas="row">
	<div class="col-md-12 col-md-offset-2">
	    <div class="col-md-4">
	      <h2><span class="label label-success">Type</span></h2>
		      <ul class="list-group">
	 		      <li class="list-group-item">
			      	<input type="radio" name="btype" id="code11" value="code11" checked="checked">
			      	<label for="code11">code 11</label><span class="label label-default pull-right">Numeric</span>
			      </li>
			      <li class="list-group-item">
			      	<input type="radio" name="btype" id="code39" value="code39">
			      	<label for="code39">code 39</label><span class="label label-info pull-right">Alphanum</span>
			      </li>
			      <li class="list-group-item">
			      	<input type="radio" name="btype" id="code93" value="code93">
			      	<label for="code93">code 93</label><span class="label label-info pull-right">Alphanum</span>
			      </li>
			      <li class="list-group-item">
			      	<input type="radio" name="btype" id="code128" value="code128">
			      	<label for="code128">code 128</label><span class="label label-info pull-right">Alphanum</span>
			      </li>
	 		      <li class="list-group-item">
			      	<input type="radio" name="btype" id="datamatrix" value="datamatrix">
			      	<label for="datamatrix">Data Matrix</label><span class="label label-info pull-right">Alphanum</span>
			      </li>
		      </ul>
	    </div>
	    <div class="col-md-4 col-md-offset-1">
	      <h2><span class="label label-success">Misc</span></h2>
	      <ul class="list-group">
		      <li class="list-group-item">
		      	<label for="bgColor">Background</label>
		      	<input type="text" id="bgColor" value="#FFFFFF" size="7">
		      </li>
		      <li class="list-group-item">
		      	<label for="color">"1" Bars</label>
		      	<input type="text" id="color" value="#000000" size="7">
		      </li>
		      <div class="barcode1D">
		      	<li class="list-group-item">
		      		<label for="barWidth">bar width</label>
		        	<input type="text" id="barWidth" value="1" size="3">
		        </li>
		        <li class="list-group-item">
		        	<label for="barHeight">bar height</label>
		        	<input type="text" id="barHeight" value="50" size="3">
		        </li>
		      </div>

		      <div class="barcode2D">
		      <h2><span class="label label-success">Module size</span></h2>
		      <li class="list-group-item">
			      	<label for="moduleSize">Size</label>
			        <input type="text" id="moduleSize" value="5" size="3">
		        </li>
		        <li class="list-group-item">
			        <label for="quietZoneSize">Quiet Zone Modules</label>
			        <input type="text" id="quietZoneSize" value="1" size="3">
		        </li>
		        <li class="list-group-item">
			        <input type="checkbox" name="rectangular" id="rectangular">
			        <label for="rectangular">Rectangular</label>
		        </li>
		      </div>
	      </ul>
	    </div>
	</div>
</div>

<div clas="row">
	<div class="col-md-12 col-md-offset-2">
		<div class="row">
		  <div class="col-md-4">
		    <form method="get">

		      <div class="input-group input-group-ld">
		        <span class="input-group-addon" id="codefrom">
		        	From : 
		        </span>
		        <input type="text" class="form-control" id="barcodeValue" name="barcodeValue" placeholder="<%=@placeholder %>" aria-describedby="barcodeValue" value="">

		        <span class="input-group-addon" id="codeto">
		        	To : 
		        </span>
		        <input type="text" class="form-control" name="codeto" placeholder="<%=@placeholder %>" aria-describedby="codeto" value="">
		        <span class="input-group-btn">
		          <button class="btn btn-primary" type="button" onclick="generateBarcode();">Generate !</button>
		        </span>
		      </div>

		      </form>
		  </div>
		</div>
	</div>
</div>

<div clas="row">
	<div class="col-md-12 col-md-offset-2">
		<div id="barcodeTarget" class="barcodeTarget"></div>
		<canvas id="canvasTarget" width="150" height="150"></canvas>
	</div>
</div>



<script src="<%= APP_PATH %>/app/vendor/jquery-qrcode-0.12.0/jquery.qrcode-0.12.0.min.js?v=<%=APP_VERSION%>"></script>

<div class="col-md-4 col-md-offset-1">
	<div class="panel panel-warning">
		<div class="panel-heading">
	    	<h3 class="panel-title"><%= _t 'Welcome on TechShopIO' %></h3>
	  	</div>
		<div class="panel-body">
			<div>
				<p>
					<%= _h 'help-general-purpose' %>
				</p>
			</div>
		 </div>
	</div>
</div>

<div class="col-md-3">
	<div class="panel panel-info">
		<div class="panel-heading">
	    	<h3 class="panel-title"><%= _t 'Mobile access <small>(admin features)</small>' %></h3>
	  	</div>
		<div class="panel-body">
			<div class="pull-right" id="qrcode-admin-list"></div>
			<div>
				<p>
					<%= _h 'help-tablet-access' %><br /><br />
					<b id="url-admin-list"></b>
				</p>
			</div>
		 </div>
	</div>
</div>

<div class="col-md-3">
	<div class="panel panel-info">
		<div class="panel-heading">
	    	<h3 class="panel-title"><%= _t 'Public catalog access' %></h3>
	  	</div>
		<div class="panel-body">
			<div class="pull-right" id="qrcode-public-catalog"></div>
			<div>
				<p>
					<%= _h 'help-public-catalog-access' %><br /><br />
					<b id="url-public-catalog"></b>
				</p>
			</div>
		 </div>
	</div>
</div>

<div class="col-md-10 col-md-offset-1">
	<div class="panel panel-warning">
		<div class="panel-heading">
	    	<h3 class="panel-title"><%= _t 'Quickstart Manual' %></h3>
	  	</div>
		<div class="panel-body">
				<p>
					<%= _h 'help-quickstarting' %><br /><br />
				</p>
		 </div>
	</div>
</div>


<script>
$(document).ready( function() {
	function generate_qr(id, url) {
		var ip = "<%= @ip %>";
		var path = "http://<%= @ip %>:<%= APP_PORT %><%= APP_PATH %>/";
		if (ip != "") {
			$("#qrcode-" + id + "").qrcode({
			    "size": 100,
			    "color": "#3a3",
			    "text": path + url
			});
			$("#url-" + id + "").html(path + url);
		} else {
			$("#qrcode-" + id + "").html("<%= _h 'help-no-lan' %>");
		}
	}

	// admin qrcode
	generate_qr("admin-list", "list");
	// Public qrcode
	generate_qr("public-catalog", "catalog");
	});
</script>

